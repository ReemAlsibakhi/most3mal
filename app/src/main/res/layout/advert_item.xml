<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/_20sdp"
    android:layoutDirection="rtl">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorGrey"
            app:cardCornerRadius="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp">


                <ImageView
                    android:id="@+id/img_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:src="@drawable/premium" />

                <ImageView
                    android:id="@+id/img_advert"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/car1" />

                <ImageView
                    android:id="@+id/img_views"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    app:srcCompat="@drawable/ic_visible" />

                <TextView
                    android:id="@+id/tv_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_toRightOf="@id/img_views"
                    android:maxLines="1"
                    android:text="200"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12ssp"/>
                <ImageButton
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_save"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_alignParentLeft="true"
                    app:srcCompat="@drawable/save_outline" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tajawal_black"
                android:maxLines="1"
                android:text="FAW فاو "
                android:gravity="right"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/colorPrimary"
               />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="18000"
                android:textColor="@color/colorGreen"
                android:fontFamily="@font/tajawal_medium"

                android:textSize="@dimen/_12ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_3sdp"
                android:text="@string/rial"
                android:fontFamily="@font/tajawal_medium"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/_12ssp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp">
            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="2020-10-4"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_regular"
                android:layout_marginLeft="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="3.8 كم"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/tajawal_regular"
                android:background="@drawable/bg_txt_distance"
                android:padding="@dimen/_5sdp"/>
        </LinearLayout>

    </LinearLayout>

    <!--    </androidx.cardview.widget.CardView>-->


</LinearLayout>