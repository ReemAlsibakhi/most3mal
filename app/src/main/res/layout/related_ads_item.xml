<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="330dp"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">




            <ImageView
                android:id="@+id/imgAds"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/car" />

            <ImageView
                android:id="@+id/imageFavorites2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:visibility="gone"
                app:srcCompat="@drawable/favorite"
                android:background="@drawable/car"/>
            <ImageView
                android:id="@+id/imageFavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:visibility="visible"
                app:srcCompat="@drawable/save_outline"
                android:background="@drawable/car"/>
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgAds"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/txtnameAds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_margin="8dp"
                android:textColor="@color/colorGreen"
                android:textSize="20dp"
                android:text="1000 ريال" />

                <TextView
                    android:id="@+id/txtpriceAds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:lines="1"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/black"
                    android:gravity="right"
                    android:fontFamily="@font/tajawal_bold"
                    android:text="اسم الاعلان"
                     />


            </LinearLayout>

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear1"
                android:layout_alignEnd="@id/linear1"
                android:layout_marginEnd="8dp"
                android:text="20-10-2020" />
        </RelativeLayout>



    </androidx.cardview.widget.CardView>



</LinearLayout>